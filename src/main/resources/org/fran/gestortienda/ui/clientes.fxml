<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/clientes.css"
            fx:controller="org.fran.gestortienda.controller.ClientesController">

    <!-- â–‘â–‘ CUERPO PRINCIPAL (IZQUIERDA) â–‘â–‘ -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    hbarPolicy="NEVER"
                    styleClass="clientes-scroll">

            <content>
                <TilePane fx:id="contenedorClientes"
                          hgap="35" vgap="35"
                          prefColumns="4"
                          alignment="TOP_CENTER"
                          styleClass="clientes-grid">

                    <!-- â–º EJEMPLO (estos serÃ¡n generados desde BD) -->
                    <VBox styleClass="cliente-card" alignment="TOP_CENTER" spacing="12">
                        <Label text="Id" styleClass="cliente-id"/>

                        <ImageView fitWidth="90" fitHeight="90" preserveRatio="true">
                            <image>
                                <Image url="@../img/icono-clientes.png"/>
                            </image>
                        </ImageView>

                        <Label text="Nombre" styleClass="cliente-text"/>
                        <Label text="Telefono" styleClass="cliente-text"/>
                        <Label text="Direccion" styleClass="cliente-text"/>
                    </VBox>

                </TilePane>
            </content>

        </ScrollPane>
    </center>

    <!-- â–‘â–‘ BARRA DERECHA EXACTA COMO EN LA CAPTURA â–‘â–‘ -->
    <right>
        <VBox styleClass="right-panel"
              prefWidth="230"
              alignment="TOP_CENTER"
              spacing="25">

            <!-- BUSCADOR -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="buscador-box">
                <TextField promptText="Buscar..." styleClass="buscador-input"/>
                <Label text="ðŸ”Ž" styleClass="buscador-icon"/>
            </HBox>

            <!-- BOTONES MINI -->
            <HBox spacing="20" alignment="CENTER">
                <Button styleClass="btn-add">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <image><Image url="@../img/icono-add.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button styleClass="btn-delete">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <image><Image url="@../img/icono-delete.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- MENÃš LATERAL ESTILO "MENU-BUTTON" PERO REDUCIDO -->
            <VBox spacing="18" alignment="TOP_CENTER" style="-fx-padding: 20 0;">
                <Button styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-proveedores.png"/></image>
                        </ImageView>
                    </graphic>
                    Proveedores
                </Button>

                <Button styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-productos.png"/></image>
                        </ImageView>
                    </graphic>
                    Productos
                </Button>

                <Button styleClass="side-menu-button-active">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-clientes-pulsado.png"/></image>
                        </ImageView>
                    </graphic>
                    Clientes
                </Button>

                <Button styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-ventas.png"/></image>
                        </ImageView>
                    </graphic>
                    Ventas
                </Button>
            </VBox>

        </VBox>
    </right>


</BorderPane>
