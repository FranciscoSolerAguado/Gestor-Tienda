                        <Button fx:id="btnProveedores" onAction="#handleProveedoresClick" prefHeight="130" prefWidth="460" styleClass="menu-button" text="Proveedores">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
