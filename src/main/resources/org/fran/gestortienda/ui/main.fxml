<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" prefHeight="768" prefWidth="1365" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fran.gestortienda.controller.MainController">

    <!-- Barra superior -->
    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #1c1a1a;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <ImageView fitHeight="24.0" fitWidth="24.0" opacity="0.5" preserveRatio="true">
                    <image>
                        <Image url="@../img/icono-gestor-tienda.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="10.0" />
                    </HBox.margin>
                </ImageView>

                <Label opacity="0.5" style="-fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-font-size: 14px;" text="Gestor-Tienda">
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleMinimize" opacity="0.5" styleClass="window-btn" text="â€”">
