              prefWidth="230"
              alignment="TOP_CENTER"
              spacing="25">
            <padding>
                <Insets top="20.0" />
            </padding>

            <!-- BUSCADOR -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="buscador-box">
                <TextField fx:id="searchField" promptText="Buscar..." styleClass="buscador-input"/>
                <Label text="ðŸ”Ž" styleClass="buscador-icon"/>
            </HBox>

            <!-- BOTONES MINI -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnAdd" styleClass="btn-add">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <image><Image url="@../img/icono-add.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnDelete" styleClass="btn-delete">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <image><Image url="@../img/icono-delete.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- MENÃš LATERAL -->
            <VBox spacing="18" alignment="TOP_CENTER" style="-fx-padding: 20 0;">
                <Button onAction="#handleProveedoresClick" styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-proveedores.png"/></image>
                        </ImageView>
                    </graphic>
                    Proveedores
                </Button>

                <Button onAction="#handleProductosClick" styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-productos.png"/></image>
                        </ImageView>
                    </graphic>
                    Productos
                </Button>

                <Button onAction="#handleClientesClick" styleClass="side-menu-button-active">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-clientes-pulsado.png"/></image>
                        </ImageView>
                    </graphic>
                    Clientes
                </Button>

                <Button onAction="#handleVentasClick" styleClass="side-menu-button">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                            <image><Image url="@../img/icono-ventas.png"/></image>
