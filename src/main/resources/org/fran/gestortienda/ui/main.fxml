<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fran.gestortienda.controller.MainController"
            prefWidth="1365" prefHeight="768"
            stylesheets="@../css/styles.css">

    <!-- Barra superior -->
    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #1c1a1a;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <ImageView fitHeight="32" fitWidth="32">
                    <image>
                        <!-- Ícono de prueba -->
                        <Image url="@../img/icono-gestor-tienda.png"/>
                    </image>
                </ImageView>

                <Label opacity="0.5" style="-fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-font-size: 14px;" text="Chat-OFFLine">
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleMinimize" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="—">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleToggleMaximize" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="❐">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleClose" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="✕">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </top>


    <!-- ░░ BARRA DERECHA ░░ -->
    <right>
        <Pane prefWidth="120" styleClass="right-bar"/>
    </right>


    <!-- ░░ CUERPO CENTRAL ░░ -->
    <center>
        <VBox alignment="CENTER" spacing="60">
            <children>
                <HBox alignment="CENTER" spacing="120">
                    <children>
                        <!-- Botón Ventas -->
                        <Button fx:id="btnVentas" text="Ventas" prefWidth="520" prefHeight="150"
                                styleClass="menu-button">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80">
                                    <image>
                                        <Image url="@../img/icono-ventas.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>


                        <!-- Botón Clientes -->
                        <Button fx:id="btnClientes" text="Clientes" prefWidth="520" prefHeight="150"
                                styleClass="menu-button">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80">
                                    <image>
                                        <Image url="@../img/icono-clientes.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>


                <HBox alignment="CENTER" spacing="120">
                    <children>
                        <!-- Botón Proveedores -->
                        <Button fx:id="btnProveedores" text="Proveedores" prefWidth="520" prefHeight="150"
                                styleClass="menu-button">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80">
                                    <image>
                                        <Image url="@../img/icono-proveedores.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>


                        <!-- Botón Productos -->
                        <Button fx:id="btnProductos" text="Productos" prefWidth="520" prefHeight="150"
                                styleClass="menu-button">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80">
                                    <image>
                                        <Image url="@../img/icono-productos.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>


</BorderPane>
