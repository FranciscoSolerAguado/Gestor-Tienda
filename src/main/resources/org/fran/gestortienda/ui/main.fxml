                <Button mnemonicParsing="false" onAction="#handleToggleMaximize" opacity="0.5" styleClass="window-btn" text="â">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleClose" opacity="0.5" styleClass="window-btn-close" text="âœ•">
                    <padding>
