<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fran.gestortienda.controller.MainController"
            prefWidth="1365.0" prefHeight="768.0"
            stylesheets="@../css/styles.css">

    <!-- Fondo: imagen EXACTA (ruta absoluta al archivo que subiste) -->
    <children>

        <!-- Panel transparente para colocar los botones exactamente donde aparecen en la imagen -->
        <Pane prefWidth="1365.0" prefHeight="768.0">

            <!-- Botón Ventas (coincide con la posición y tamaño de la imagen) -->
            <Button fx:id="btnVentas" text="Ventas"
                    layoutX="120.0" layoutY="96.0"
                    prefWidth="520.0" prefHeight="150.0"
                    styleClass="pixel-button" />

            <!-- Botón Clientes -->
            <Button fx:id="btnClientes" text="Clientes"
                    layoutX="725.0" layoutY="96.0"
                    prefWidth="520.0" prefHeight="150.0"
                    styleClass="pixel-button" />

            <!-- Botón Proveedores -->
            <Button fx:id="btnProveedores" text="Proveedores"
                    layoutX="120.0" layoutY="366.0"
                    prefWidth="520.0" prefHeight="150.0"
                    styleClass="pixel-button" />

            <!-- Botón Productos -->
            <Button fx:id="btnProductos" text="Productos"
                    layoutX="725.0" layoutY="366.0"
                    prefWidth="520.0" prefHeight="150.0"
                    styleClass="pixel-button" />

        </Pane>
    </children>
</AnchorPane>
