<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" prefHeight="768" prefWidth="1365" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fran.gestortienda.controller.MainController">

    <!-- Barra superior -->
    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #1c1a1a;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <ImageView fitHeight="24.0" fitWidth="24.0" opacity="0.5" preserveRatio="true">
                    <image>
                        <Image url="@../img/icono-gestor-tienda.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="10.0" />
                    </HBox.margin>
                </ImageView>

                <Label opacity="0.5" style="-fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-font-size: 14px;" text="Gestor-Tienda">
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleMinimize" opacity="0.5" styleClass="window-btn" text="—">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleToggleMaximize" opacity="0.5" styleClass="window-btn" text="❐">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleClose" opacity="0.5" styleClass="window-btn-close" text="✕">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </top>


    <!-- ░░ BARRA DERECHA ░░ -->
    <right>
        <Pane prefWidth="180" styleClass="right-bar" />
    </right>


    <!-- ░░ CUERPO CENTRAL ░░ -->
    <center>
        <VBox alignment="CENTER" spacing="60">
            <children>
                <HBox alignment="CENTER" spacing="120">
                    <children>
                        <!-- Botón Ventas -->
                        <Button fx:id="btnVentas" prefHeight="130" prefWidth="460" styleClass="menu-button" text="Ventas">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/icono-ventas.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>


                        <!-- Botón Clientes -->
                        <Button fx:id="btnClientes" prefHeight="130" prefWidth="460" styleClass="menu-button" text="Clientes" onAction="#handleClientesClick">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/icono-clientes.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>


                <HBox alignment="CENTER" spacing="120">
                    <children>
                        <!-- Botón Proveedores -->
                        <Button fx:id="btnProveedores" prefHeight="130" prefWidth="460" styleClass="menu-button" text="Proveedores">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/icono-proveedores.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>


                        <!-- Botón Productos -->
                        <Button fx:id="btnProductos" prefHeight="130" prefWidth="460" styleClass="menu-button" text="Productos">
                            <graphic>
                                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/icono-productos.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
